{
  "name": "wdp301-assistants",
  "version": "1.0.0",
  "description": "WDP301 Assistants - Fullstack Web Development Project with React, Node.js, Express, React Native, and MongoDB",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../mobile && npm install",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "frontend:dev": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "mobile:start": "cd mobile && npm start",
    "mobile:android": "cd mobile && npm run android",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:web": "cd mobile && npm run web",
    "test": "echo \"Run tests from individual project directories\"",
    "lint": "echo \"Run linting from individual project directories\""
  },
  "keywords": [
    "fullstack",
    "react",
    "nodejs",
    "express",
    "react-native",
    "mongodb",
    "typescript",
    "bootstrap",
    "web-development",
    "mobile-development",
    "education"
  ],
  "author": "WDP301 Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hieufu/wdp301-assistants.git"
  },
  "workspaces": [
    "backend",
    "frontend",
    "mobile"
  ]
}